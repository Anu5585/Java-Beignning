<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleGroup?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.radiobutton.HelloController">

    <fx:define>
        <ToggleGroup fx:id="group" />
    </fx:define>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   

   <Label text="Label" />
   <RadioButton mnemonicParsing="false" onAction="#onCheckBoxSelected" text="RadioButton1" toggleGroup="$group" />
   <RadioButton mnemonicParsing="false" text="RadioButton2" />
   <RadioButton mnemonicParsing="false" text="RadioButton3" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
   <Label text="Label" />
</VBox>
